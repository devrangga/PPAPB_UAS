<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserDetailItem">

    <TextView
        android:id="@+id/detailText"
        android:layout_marginTop="36dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Movie Detail"
        android:fontFamily="@font/poppins_bold"
        android:textSize="24dp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/detailBackButton"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_ios_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/detailImgView"
        android:layout_width="match_parent"
        android:layout_marginTop="36dp"
        android:layout_height="350dp"
        app:layout_constraintTop_toBottomOf="@id/detailText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="36dp"
        android:background="@drawable/outline_grey"/>
    <TextView
        android:id="@+id/detailTitle"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Movie Detail"
        android:fontFamily="@font/poppins_bold"
        android:textSize="24dp"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detailImgView"/>
    <TextView
        android:id="@+id/detailAuthor"
        android:layout_marginHorizontal="36dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Director: Erik Richter Strand"
        android:fontFamily="@font/poppins_medium"
        android:textSize="18dp"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detailTitle"/>
    <TextView
        android:id="@+id/detailLabelOne"
        android:layout_marginHorizontal="36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Education"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="24dp"
        android:paddingVertical="6dp"
        android:fontFamily="@font/poppins_medium"
        android:background="@drawable/filled_grey"
        android:textSize="18dp"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detailAuthor"/>
    <TextView
        android:id="@+id/detailLabelTwo"
        android:layout_marginHorizontal="36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Funny"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="24dp"
        android:paddingVertical="6dp"
        android:fontFamily="@font/poppins_medium"
        android:background="@drawable/filled_grey"
        android:textSize="18dp"
        android:textAlignment="textStart"
        app:layout_constraintStart_toEndOf="@id/detailLabelOne"
        app:layout_constraintTop_toBottomOf="@id/detailAuthor"/>
    <TextView
        android:id="@+id/detailStoryline"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="36dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Story Line"
        android:fontFamily="@font/poppins_bold"
        android:textSize="24dp"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detailLabelOne"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detailStoryline">
        <TextView
            android:id="@+id/detailDescription"
            android:layout_marginHorizontal="36dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum."
            android:fontFamily="@font/poppins_medium"
            android:textSize="18dp"
            android:textAlignment="textStart"/>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>