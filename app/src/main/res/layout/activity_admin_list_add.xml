<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/addinglist_bg"
    tools:context=".AdminListAdd">

        <LinearLayout
            android:paddingHorizontal="48dp"
            android:layout_marginTop="196dp"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/adminListAddImage"
                android:layout_width="match_parent"
                android:layout_height="196dp"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true">

                    <ImageView
                        android:src="@drawable/homescreen_bg"
                        android:id="@+id/imageViewAdd"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/baseline_add_24" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/adminListAddTitle"
                android:layout_marginTop="36dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/outline_grey"
                android:hint="Title"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/poppins_medium"
                android:paddingHorizontal="24dp"
                android:paddingVertical="12dp"
                android:layout_gravity="center"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/adminListAddAuthor"
                android:layout_marginTop="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/outline_grey"
                android:hint="Author"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/poppins_medium"
                android:paddingHorizontal="24dp"
                android:paddingVertical="12dp"
                android:layout_gravity="center"/>
            <com.google.android.material.textfield.TextInputEditText
                android:height="144dp"
                android:id="@+id/adminListAddDescription"
                android:layout_marginTop="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/outline_grey"
                android:hint="Description"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/poppins_medium"
                android:paddingHorizontal="24dp"
                android:paddingVertical="12dp"
                android:layout_gravity="center"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/adminListAddButton"
                android:layout_marginTop="36dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/filled_blue"
                android:text="Create Item"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_extrabold"
                android:paddingHorizontal="24dp"
                android:paddingVertical="12dp"
                android:gravity="center"
                android:layout_gravity="center"/>
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>